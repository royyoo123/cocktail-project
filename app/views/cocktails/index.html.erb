
<div class="container my-5">
	<h1 style="color: white">Cocktails</h1>
	<div class="cards">
	<% @cocktails.each do |cocktail| %>
		<% if cocktail.photos[0] %>
		<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photos[0].key, height: 300, crop: :fill; %>')">

		<h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
		</div>
		<% end %>
	<% end %>
</div>
<%= link_to "Add cocktail", new_cocktail_path %>
</div>